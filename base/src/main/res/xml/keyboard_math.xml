<Keyboard xmlns:android="http://schemas.android.com/apk/res/android"
    android:keyWidth="10%p"
    android:horizontalGap="0dp"
    android:verticalGap="0dp"
    android:keyHeight="7%p">
    <Row>
        <Key android:keyLabel="~" android:keyEdgeFlags="left"/>
        <Key android:keyLabel="`" />
        <Key android:keyLabel="|" />
        <Key android:keyLabel="•" />
        <Key android:keyLabel="√" />
        <Key android:keyLabel="π"/>
        <Key android:keyLabel="÷" />
        <Key android:keyLabel="×" />
        <Key android:keyLabel="¶" />
        <Key android:keyLabel="∆" android:keyEdgeFlags="right"  />
    </Row>
    <Row>
        <Key android:keyLabel="£" android:keyEdgeFlags="left"/>
        <Key android:keyLabel="¢" />
        <Key android:keyLabel="€" />
        <Key android:keyLabel="¥" />
        <Key android:keyLabel="^" />
        <Key android:keyLabel="°" />
        <Key android:keyLabel="=" />
        <Key android:keyLabel="{" />
        <Key android:keyLabel="}" />
        <Key android:keyLabel="\\" android:keyEdgeFlags="right"  />
    </Row>
    <Row>
        <Key android:codes="@integer/kbd_numeric_switch" android:keyWidth="15%p" android:keyEdgeFlags="left"/>
        <Key android:keyLabel="%" />
        <Key android:keyLabel="©" />
        <Key android:keyLabel="®" />
        <Key android:keyLabel="™" />
        <Key android:keyLabel="✓" />
        <Key android:keyLabel="[" />
        <Key android:keyLabel="]" />
        <Key android:codes="@integer/kbd_backspace_delete" android:keyWidth="15%p" android:isRepeatable="true" android:keyEdgeFlags="right"/>
    </Row>
    <Row android:rowEdgeFlags="bottom">
        <Key android:codes="@integer/kbd_alpha_switch" android:keyWidth="15%p" android:keyEdgeFlags="left"/>
        <Key android:keyLabel="&lt;"/>
        <Key android:codes="32" android:keyLabel=" " android:keyWidth="50%p" android:isRepeatable="true"/>
        <Key android:keyLabel=">" />
        <Key android:codes="@integer/kbd_enter_return_key" android:keyWidth="15%p" android:keyEdgeFlags="right"/>
    </Row>
</Keyboard>