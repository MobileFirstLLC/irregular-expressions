<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- keyboard styles -->

    <style name="kbd_icon">
        <item name="android:layout_width">@dimen/kbd_icon_size</item>
        <item name="android:layout_height">@dimen/kbd_icon_size</item>
        <item name="android:layout_marginStart">@dimen/kbd_icon_h_margin</item>
        <item name="android:layout_marginLeft">@dimen/kbd_icon_h_margin</item>
        <item name="android:layout_marginEnd">@dimen/kbd_icon_h_margin</item>
        <item name="android:layout_marginRight">@dimen/kbd_icon_h_margin</item>
        <item name="android:padding">@dimen/kdb_icon_padding</item>
    </style>

    <style name="kbd_style_picker_option">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">@dimen/match_parent</item>
        <item name="android:gravity">center</item>
        <item name="android:paddingStart">@dimen/kbd_style_picker_horizontal_padding</item>
        <item name="android:paddingLeft">@dimen/kbd_style_picker_horizontal_padding</item>
        <item name="android:paddingEnd">@dimen/kbd_style_picker_horizontal_padding</item>
        <item name="android:paddingRight">@dimen/kbd_style_picker_horizontal_padding</item>
        <item name="android:textColor">@color/keyboardTextColor</item>
        <item name="layout_constraintStart_toStartOf">parent</item>
        <item name="layout_constraintTop_toTopOf">parent</item>
    </style>

    <style name="kbd_style_picker_option_active" parent="kbd_style_picker_option">
        <item name="android:background">@drawable/rounded_primary_bg</item>
    </style>

    <style name="kbd_vertical_divider">
        <item name="android:layout_width">1dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_marginTop">4dp</item>
        <item name="android:layout_marginBottom">4dp</item>
        <item name="android:background">@color/keyboardDivider</item>
    </style>

    <!-- main activity styles -->

    <style name="main_scroll_view">
        <item name="android:layout_width">@dimen/match_parent</item>
        <item name="android:layout_height">@dimen/match_parent</item>
        <item name="android:background">@color/colorPrimaryDark</item>
    </style>

    <style name="main_linear">
        <item name="android:layout_width">@dimen/match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="main_header">
        <item name="android:layout_width">@dimen/match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">@dimen/main_element_spacing</item>
        <item name="android:textStyle">bold</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textAppearance">?android:attr/textAppearanceMedium</item>
        <item name="android:text">@string/intro_header</item>
    </style>

    <style name="main_card_container" parent="@style/main_linear">
        <item name="android:orientation">horizontal</item>
        <item name="android:layout_width">@dimen/match_parent</item>
        <item name="android:gravity">center_horizontal</item>
    </style>

    <style name="main_intro_card_gutter">
        <item name="android:layout_weight">1</item>
        <item name="android:minWidth">@dimen/main_card_width</item>
        <item name="android:layout_height">@dimen/match_parent</item>
        <item name="android:layout_width">0dp</item>
    </style>

    <style name="main_intro_card">
        <item name="android:layout_weight">8</item>
        <item name="android:maxWidth">@dimen/main_card_width</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:layout_marginBottom">@dimen/main_element_spacing</item>
        <item name="android:paddingBottom">@dimen/main_element_spacing_2x</item>
        <item name="android:background">@drawable/layout_bg</item>
    </style>

    <style name="main_icon">
        <item name="android:layout_width">@dimen/main_icon_size</item>
        <item name="android:layout_height">@dimen/main_icon_size</item>
        <item name="android:layout_marginTop">@dimen/main_element_spacing_2x</item>
        <item name="layout_constraintLeft_toLeftOf">parent</item>
        <item name="layout_constraintRight_toRightOf">parent</item>
        <item name="layout_constraintTop_toTopOf">parent</item>
        <item name="srcCompat">@drawable/ic_icon_round</item>
    </style>

    <style name="main_card_text_view">
        <item name="android:layout_width">@dimen/main_card_content_width</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">@dimen/main_element_spacing</item>
        <item name="layout_constraintLeft_toLeftOf">parent</item>
        <item name="layout_constraintRight_toRightOf">parent</item>
        <item name="android:textStyle">bold</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="main_card_text_view_1" parent="@style/main_card_text_view">
        <item name="android:text">@string/intro_subtitle</item>
        <item name="layout_constraintTop_toBottomOf">@+id/icon</item>
    </style>

    <style name="main_card_text_view_2" parent="@style/main_card_text_view">
        <item name="android:text">@string/now_try_it</item>
        <item name="android:paddingBottom">0dp</item>
        <item name="layout_constraintTop_toBottomOf">@+id/step_2</item>
    </style>

    <style name="main_card_button">
        <item name="android:enabled">false</item>
        <item name="android:layout_marginStart">@dimen/main_element_spacing</item>
        <item name="android:layout_marginLeft">@dimen/main_element_spacing</item>
        <item name="android:layout_marginEnd">@dimen/main_element_spacing</item>
        <item name="android:layout_marginRight">@dimen/main_element_spacing</item>
        <item name="android:layout_width">@dimen/main_card_content_width</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="layout_constraintLeft_toLeftOf">parent</item>
        <item name="layout_constraintRight_toRightOf">parent</item>
    </style>

    <style name="main_card_button_1" parent="@style/main_card_button">
        <item name="android:text">@string/enable_keyboard</item>
        <item name="layout_constraintTop_toBottomOf">@id/header</item>
    </style>

    <style name="main_card_button_2" parent="@style/main_card_button">
        <item name="android:text">@string/select_keyboard</item>
        <item name="layout_constraintTop_toBottomOf">@id/step_1</item>
    </style>

    <style name="main_input_text_input_layout" parent="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="android:layout_width">@dimen/main_card_content_width</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">@dimen/main_element_spacing</item>
        <item name="android:layout_marginLeft">@dimen/main_element_spacing</item>
        <item name="android:layout_marginEnd">@dimen/main_element_spacing</item>
        <item name="android:layout_marginRight">@dimen/main_element_spacing</item>
        <item name="endIconMode">clear_text</item>
        <item name="layout_constraintLeft_toLeftOf">parent</item>
        <item name="layout_constraintRight_toRightOf">parent</item>
        <item name="layout_constraintTop_toBottomOf">@id/try_hint</item>
    </style>

    <style name="main_input_text_input_edit_text">
        <item name="android:layout_width">@dimen/match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:lines">@integer/main_input_lines</item>
    </style>

    <!-- style config -->

    <style name="config_checkbox">
        <item name="android:paddingStart">@dimen/style_config_padding</item>
        <item name="android:paddingEnd">@dimen/style_config_padding</item>
        <item name="android:paddingLeft">@dimen/style_config_padding</item>
        <item name="android:paddingRight">@dimen/style_config_padding</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="layout_constraintEnd_toEndOf">parent</item>
        <item name="layout_constraintTop_toTopOf">parent</item>
        <item name="layout_constraintBottom_toBottomOf">parent</item>
    </style>

    <style name="config_style">
        <item name="android:paddingStart">@dimen/style_config_padding</item>
        <item name="android:paddingEnd">@dimen/style_config_padding</item>
        <item name="android:paddingLeft">@dimen/style_config_padding</item>
        <item name="android:paddingRight">@dimen/style_config_padding</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center_vertical|start</item>
        <item name="layout_constraintEnd_toStartOf">@id/order_btn_down</item>
        <item name="layout_constraintStart_toStartOf">parent</item>
        <item name="layout_constraintTop_toTopOf">parent</item>
        <item name="layout_constraintBottom_toBottomOf">parent</item>
    </style>

    <style name="config_order_btn" parent="@style/Widget.MaterialComponents.Button.TextButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="iconPadding">0dp</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:paddingLeft">12dp</item>
        <item name="android:paddingRight">12dp</item>
        <item name="android:minWidth">48dp</item>
        <item name="android:minHeight">48dp</item>
        <item name="layout_constraintTop_toTopOf">parent</item>
        <item name="layout_constraintBottom_toBottomOf">parent</item>
    </style>

</resources>