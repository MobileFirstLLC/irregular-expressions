<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="8dp"
    android:layout_marginLeft="8dp"
    android:layout_marginTop="2dp"
    android:layout_marginEnd="8dp"
    android:layout_marginRight="8dp"
    android:layout_marginBottom="2dp"
    android:background="@drawable/bg_config_item"
    android:minHeight="@dimen/style_config_row_minHeight"
    tools:ignore="MissingConstraints">

    <TextView
        android:id="@+id/text_value"
        style="@style/config_style" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/order_btn_down"
        style="@style/config_order_btn"
        app:icon="@drawable/pref_ic_arrow_down"
        app:layout_constraintEnd_toStartOf="@id/order_btn_up" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/order_btn_up"
        style="@style/config_order_btn"
        app:icon="@drawable/pref_ic_arrow_up"
        app:layout_constraintEnd_toStartOf="@id/enable_box" />

    <com.google.android.material.switchmaterial.SwitchMaterial
        android:id="@+id/enable_box"
        style="@style/config_checkbox" />

</androidx.constraintlayout.widget.ConstraintLayout>